<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Afreeca" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0160D1</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Afreeca.TextView.BroadTitle" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Afreeca.TextView.Nickname" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor"></item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Afreeca.TextView.TotalView" parent="Widget.AppCompat.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/Gray500</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>